{
    "flow_name": "bksldf",
    "description": "Metadata describing the sample generated data",
    "source": {
        "type": "file",
        "extension": ".csv",
        "delimiter": ",",
        "encoding": "utf-8"
    },
    "schema": {
        "columns": {
            "id": {
                "type": "integer",
                "nullable": false,
                "unique": true,
                "description": "Unique identifier for the record."
            },
            "name": {
                "type": "string",
                "nullable": false,
                "max_length": 50,
                "description": "Person's name."
            },
            "age": {
                "type": "integer",
                "nullable": false,
                "min": 18,
                "max": 70,
                "description": "Person's age."
            },
            "salary": {
                "type": "decimal",
                "nullable": false,
                "precision": 2,
                "description": "Person's salary in USD."
            },
            "start_date": {
                "type": "date",
                "nullable": false,
                "format": "YYYY-MM-DD",
                "description": "Employment start date."
            },
            "last_login": {
                "type": "datetime",
                "nullable": true,
                "format": "YYYY-MM-DDTHH:mm:ss",
                "description": "Last login timestamp."
            },
            "status": {
                "type": "string",
                "nullable": false,
                "enum": ["Active", "Inactive", "Pending"],
                "description": "User status in the system."
            },
            "score": {
                "type": "decimal",
                "nullable": false,
                "precision": 1,
                "description": "Performance or evaluation score."
            },
            "email": {
                "type": "string",
                "nullable": false,
                "format": "email",
                "unique": true,
                "description": "User's email address."
            },
            "is_verified": {
                "type": "boolean",
                "nullable": false,
                "default": false,
                "description": "Indicates whether the email is verified."
            }
        },
        "primary_key": ["id"],
        "foreign_keys": []
    },
    "pre_validation_rules": [
        "StructureValidationHandler"
    ],
    "post_validation_rules": [
        "WritenRowsValidationHandler"
    ],
    "transformation_rules": {
        "type_casting": {
            "columns": {
                "id": "integer",
                "age": "integer",
                "salary": "decimal",
                "start_date": "datetime",
                "last_login": "datetime",
                "score": "decimal",
                "is_verified": "boolean"
            }
        },
        "strip_whitespace": {
            "columns": ["name", "status"]
        },
        "custom_transformations": [
            {
                "operation": "uppercase",
                "columns": ["name", "status"]
            }
        ]
    }
}
